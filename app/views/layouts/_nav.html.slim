nav.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed[type="button" data-toggle="collapse" data-target="#nav"]
        span.sr-only
          | Toggle navigation
        = icon('bars', class: "fa-inverse")
      = link_to 'Hackathons.com', root_path, :class => "navbar-brand"
    #nav.collapse.navbar-collapse
      ul.nav.navbar-nav
        li.active
          a[href="#"]
            | Link 
            span.sr-only
              | (current)
        li
          a[href="#"]
            | Link
      ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          li
            = link_to edit_user_registration_path do
              - current_user.email
          li
            = link_to 'Sign Out', destroy_user_session_path, method: :delete
        - else
          li
            = link_to 'Sign In', new_user_session_path
          li
            = link_to 'Sign Up', new_user_registration_path
